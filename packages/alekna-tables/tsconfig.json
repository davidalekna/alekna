{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/__stories__/**/*",
    "**/__utils__/**/*",
    "*.test.ts",
    "*.test.tsx"
  ]
}
