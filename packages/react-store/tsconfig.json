{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "composite": true,
    "outDir": "lib",
    "jsx": "react",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noEmit": false,
    "module": "CommonJS"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "**/__mocks__/**/*", "**/__tests__/**/*", "**/*.mdx"]
}
