{
  "name": "alekna-monorepo",
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna exec -- npm install --package-lock=false && lerna run prepare",
    "diff": "check-if-folder-contents-changed-in-git-commit-range",
    "build": "lerna run build",
    "test": "jest --verbose",
    "test-ci": "npm run coverage -- --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "filesize": "lerna run build && bundlesize",
    "coverage": "jest --verbose --coverage",
    "coverage:upload": "codecov",
    "deploy": "lerna publish",
    "clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +"
  },
  "bundlesize": [
    {
      "name": "alekna-forms",
      "path": "./packages/alekna-forms/lib/bundle.cjs.min.js",
      "maxSize": "10.6 kB"
    },
    {
      "name": "alekna-data-browser",
      "path": "./packages/alekna-data-browser/lib/bundle.cjs.min.js",
      "maxSize": "10.6 kB"
    },
    {
      "name": "alekna-toasts",
      "path": "./packages/alekna-toasts/lib/bundle.cjs.min.js",
      "maxSize": "10.6 kB"
    },
    {
      "name": "alekna-store",
      "path": "./packages/alekna-store/lib/bundle.cjs.min.js",
      "maxSize": "10.6 kB"
    },
    {
      "name": "alekna-organizer",
      "path": "./packages/alekna-organizer/lib/bundle.cjs.min.js",
      "maxSize": "10.6 kB"
    }
  ],
  "dependencies": {
    "react-data-browser": "file:packages/alekna-data-browser",
    "react-forms": "file:packages/alekna-forms",
    "react-toasts": "file:packages/alekna-toasts",
    "react-store": "file:packages/alekna-store",
    "react-organizer": "file:packages/alekna-organizer"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.134",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "codecov": "^3.5.0",
    "lerna": "^3.15.0",
    "lodash": "^4.17.11",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.15.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-invariant": "^0.5.6",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "rxjs": "^6.5.2",
    "typescript": "^3.5.2"
  }
}
